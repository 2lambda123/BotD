{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node16",
    "target": "es5",
    "removeComments": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noErrorTruncation": true,
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "playground/dist"
  ],
}
